   "version": "0.2.0",
   "configurations": [
      {
         "type": "node",
         "request": "launch",
         "cwd": "${workspaceFolder}",
         "name": "Run unit tests",
         "preLaunchTask": "pretest",
         "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
         "args": [
            "--timeout", "100000",
            "--colors", "--recursive",
            "${workspaceFolder}/tests/requireTests.js"
         ],
         "internalConsoleOptions": "openOnSessionStart"
      }
   ]
}